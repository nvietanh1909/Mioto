
@{
    ViewBag.Title = "MyTrip";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}
@model IEnumerable<Mioto.Models.DonThueXe>
@{ var guest = Session["KhachHang"] as Mioto.Models.KhachHang; }

<div class="content-title">
    <h4>Thông tin xe đã thuê</h4>
</div>
@if (guest != null)
{
    if (Model != null)
    {
        <div class="mytrips-mode">
            <div class="tab-mode">
                <a class="tab-mode__item active">Chuyến hiện tại</a>
            </div>
            <thead>
                <tr class="row100 head" style="color: white; font-weight: 500;">
                    <th class="column100 column1">Biển số xe</th>
                    <th class="column100 column2">Hãng xe</th>
                    <th class="column100 column3">Màu xe</th>
                    <th class="column100 column4">Khu vực</th>
                    <th class="column100 column6">Tính năng</th>
                    <th class="column100 column7">Tổng tiền</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var donthuexe in Model)
                {
                    <tr class="row100">
                        <td class="column100">@Html.DisplayFor(modelItem => donthuexe.BienSoXe)</td>
                        <td class="column100">@Html.DisplayFor(modelItem => donthuexe.NgayThue)</td>
                        <td class="column100">@Html.DisplayFor(modelItem => donthuexe.NgayTra)</td>
                        <td class="column100">@Html.DisplayFor(modelItem => donthuexe.BDT)</td>
                        <td class="column100">@Html.DisplayFor(modelItem => donthuexe.TongTien)</td>
                    </tr>
                }
            </tbody>
        </div>
    }
    else
    {
        <div class="list-car my-trips">
            <div class="empty-container">
                <img loading="lazy" src="https://www.mioto.vn/static/media/empty-trip.8f191e42.svg" alt="">
                <p>Bạn chưa có chuyến</p>
            </div>
        </div>
    }
}



