@model Mioto.Models.GPLX

@{
    ViewBag.Title = "EditGPLX";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-content" role="document">
        <div class="modal-header">
            <h4 class="text-primary">Thông tin Giấy phép lái xe</h4>
        </div>
        <div class="modal-body">
            <div class="modal-input-body modal-owner-register">
                <div class="line-form">

                    <div class="custom-input">
                        <div class="wrap-info">
                            <div class="title-status">
                                <p>Tên*</p>
                            </div>
                        </div>
                        <div class="wrap-input">
                            @Html.EditorFor(model => model.Ten, new { @class = "form-control", placeholder = "Tên của bạn" })
                            @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="line-form">
                    <div class="custom-input">
                        <div class="wrap-info">
                            <div class="title-status">
                                <p>Số Giấy phép lái xe*</p>
                            </div>
                        </div>
                        <div class="wrap-input">
                            @Html.EditorFor(model => model.SoGPLX, new { @class = "form-control", placeholder = "Số Giấy phép lái xe của bạn" })
                            @Html.ValidationMessageFor(model => model.SoGPLX, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="line-form">
                    <div class="custom-input">
                        <div class="wrap-info">
                            <div class="title-status">
                                <p>Ngày sinh*</p>
                            </div>
                        </div>
                        <div class="wrap-input">
                            <input type="date" class="form-control" name="NgaySinh" value="@Model.NgaySinh?.ToString(" yyyy-MM-dd")" />
                            @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="wrap-btn btn-register">
                    <button type="submit" class="btn btn--m btn-primary">Lưu thay đổi</button>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại danh sách", "DetailAccount")
</div>
