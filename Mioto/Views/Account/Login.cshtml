
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}


<div class="modal-content" style="width: 50%;">
    <div class="modal-header">
        <h5>Đăng nhập</h5>
    </div>
    <div class="modal-body">
        <div class="modal-input-body modal-login-body">
            <div class="line-form">
                <div class="custom-input">
                    <div class="wrap-info">
                        <div class="title-status">
                            <p>Số điện thoại hoặc email</p>
                        </div>
                    </div>
                    <div class="wrap-input">
                        <div class="wrap-text">
                            <input type="text" name="ip_username" placeholder="" value="">
                        </div>
                    </div>
                </div>
            </div>

            <div class="line-form">
                <div class="custom-input">
                    <div class="wrap-info">
                        <div class="title-status">
                            <p>Mật khẩu</p>
                        </div>
                    </div>
                    <div class="wrap-input">
                        <div class="wrap-text">
                            <input type="password" name="ip_username" placeholder="" value="">
                        </div>
                        <div class="wrap-svg">
